<div class="col-12 {{section.settings.section_border}} {{section.settings.color_text_bg}}">
 
{% if section.settings.section_margin == true %}
<div class="col-sm-12 offset-md-2 col-md-8 offset-lg-2 col-lg-8 offset-xl-2 col-xl-8 margin-1em">
{% else %}
<div class="col-12 margin-1em">
{% endif %}
   
  
    {% if section.settings.title != blank %}
  <div class="col-12 margin-imgtext-2em">
  </div>
    <div class="{{section.settings.head_text_align}} text-transform">
      <span class="{{section.settings.head_text_size}} {{section.settings.head_text_color}}">{{ section.settings.title | escape }}</span>
    </div>
    {% endif %}

    <div class="col-12">

      
	  {% for block in section.blocks %}

        <div class="col-sm-12 {{block.settings.width}}">
           <div class="size80">
            <div class="col-12 margin-1em">
              <div class="col-6 margin-1em">
                <div class="{{section.settings.icon_width}} {{block.settings.head_text_color}} margin-1em" >
                  <amp-fit-text width="1"
                    height="1"
                    layout="responsive"
                    max-font-size="100">
                    {{block.settings.home-features-icon}}
                  </amp-fit-text>            
                </div>
              </div>
            </div>
             
             
             {% if block.settings.home-features-title != blank %}
             <div class="{{block.settings.head_text_align}} text-transform margin-1em">
               <span class="{{block.settings.head_text_size}} {{block.settings.head_text_color}}">{{ block.settings.home-features-title | escape }}</span>
             </div>
             {% endif %}
             {% if block.settings.home-features-content != blank %}
             <div class="{{block.settings.body_text_align}} margin-1em">
               <span class="{{block.settings.body_text_size}}">{{ block.settings.home-features-content }}</span>
             </div>
             {% endif %}

          </div>
		</div>

      {% endfor %}

    </div>
    <div class="col-12 margin-imgtext-2em">
  </div>
</div>
</div>

