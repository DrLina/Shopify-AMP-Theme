        "options": [
          {
            "label": "h1 size",
            "value": "h1_size"
          },
          {
            "label": "h2 size",
            "value": "h2_size"
          },
          {
            "label": "h3 size",
            "value": "h3_size"
          },
          {
            "label": "h4 size",
            "value": "h4_size"
          },
          {
            "label": "body text size",
            "value": "p_size"
          } 
        ]
      },
	  {
        "type": "select",
        "id": "head_text_align",
        "label": "Section heading text align",
        "default": "text-align-center",
        "options": [
          {
            "label": "center",
            "value": "text-align-center"
          },
          {
            "label": "left",
            "value": "text-align-left"
          },
          {
            "label": "right",
            "value": "text-align-right"
          } 
        ]
      },
	  {
        "type": "select",
        "id": "head_text_color",
        "label": "Section heading text color",
        "default": "title_text_color",
        "options": [
          {
            "label": "Title text color",
            "value": "title_text_color"
          },
          {
            "label": "Body text color",
            "value": "body_text_color"
          }
        ]
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
      },    
      {
        "type": "select",
        "id": "body_text_size",
        "label": "Section body text size",
        "default": "h2_size",
        "options": [
          {
            "label": "h1 size",
            "value": "h1_size"
          },
          {
            "label": "h2 size",
            "value": "h2_size"
          },
          {
            "label": "h3 size",
            "value": "h3_size"
          },
          {
            "label": "h4 size",
            "value": "h4_size"
          },
          {
            "label": "body text size",
            "value": "p_size"
          }
        ]
      },
      {
        "type": "select",
        "id": "body_text_align",
        "label": "Section body text align",
        "default": "text-align-center",
        "options": [
          {
            "label": "center",
            "value": "text-align-center"
          },
          {
            "label": "left",
            "value": "text-align-left"
          },
          {
            "label": "right",
            "value": "text-align-right"
          } 
        ]
      }
    ],
    "presets": [
      {
        "name": "Rich text",
        "category": "Text"
      }
    ]
  }
{% endschema %}
